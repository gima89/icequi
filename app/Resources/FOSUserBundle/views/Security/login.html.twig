{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="closePP" id="signInClose"></div>
  <h2>BENTORNATO SU</h2>
  <img src="http://www.marcolanci.it/icequi/img/whitelogo.png" alt="iceQui Logo" class="popupLogo" />
<form action="{{ path("fos_user_security_check") }}" method="post" name="signInForm" id="signInForm">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="Username" class="greyInput" /><br />
    <input type="password" id="password" name="_password" required="required" placeholder="Password" class="greyInput" /><br />
    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
    <p id="forgotten">Password Dimenticata?</p><br />
    <input type="submit" id="_submit" name="_submit" class="submitButton" value="{{ 'security.login.submit'|trans }}" />
</form>

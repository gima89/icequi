        {% block popups %}
        <div class="layer" id="layer">
              <section class="popup">
                <div id="signUpPopUp">
                  <div class="closePP" id="signUpClose"></div>
                    <h2>BENVENUTO SU</h2>
                    <img src="http://www.marcolanci.it/icequi/imgimg/whitelogo.png" alt="iceQui Logo" class="popupLogo" />
                    <form name="signUpForm" method="get" action="<?= $_SERVER['PHP_SELF'] ?>" />
                      <input type="hidden" name="logged" value="1" />
                      <input type="mail" name="user" placeholder="E-mail" class="greyInput" /><br />
                      <input type="password" name="psw1" placeholder="Password" class="greyInput" /><br />
                      <input type="password" name="psw2" placeholder="Ripeti Password" class="greyInput" /><br />
                      <input type="submit" class="submitButton" value="REGISTRATI" />
                    </form>
                  <div class="popupFooter">
                    OPPURE REGISTRATI CON FACEBOOK <a href="http://www.facebook.com" target="_blank"><img src="http://www.marcolanci.it/icequi/img/fblogin.png" alt="Facebook LogIn" /></a>
                  </div>
                </div>
                <div id="signInPopUp">
                  <div class="closePP" id="signInClose"></div>
                    <h2>BENTORNATO SU</h2>
                    <img src="http://www.marcolanci.it/icequi/img/whitelogo.png" alt="iceQui Logo" class="popupLogo" />
                    <form name="signInForm" method="get" action="<?= $_SERVER['PHP_SELF'] ?>" id="signInForm" />
                      <input type="hidden" name="logged" value="1" />

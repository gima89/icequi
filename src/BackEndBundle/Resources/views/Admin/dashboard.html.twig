{% extends "::adminBase.html.twig" %}

{% block rightcol %}
<div class="adminTitle">
	Consulta Reportistica
</div>
<div class="reportFormContainer">
	<form method="post" action="{{url('report')}}">
		<table id="reportFormTable" >
			<tr>
				<td>
					<select id="dbRegionSelect">
						<option>Regione</option>
						{% for regione in regioni %}
						<option value="{{regione.id}}">{{regione.nomeRegione}}</option>
						{% endfor %}
					</select>
				</td>
				<td>
					Dal:  <input type="date" name="fromDate" value="{{settimanaScorsa}}" />
					</td>
				</tr>
					<td id="dbProvinceSection">
						<select id="dbProvinciaSelect" disabled>
							<option>Provincia</option>
						</select>
					</td>
					<td>
						Al: <input type="date" name="toDate" value="{{oggi}}" />
					</td>
				</tr>
				<tr>
					<td id="dbCitySection">
						<select id="dbCitySelect" disabled>
							<option>Citt&agrave;</option>
						</select>
					</td>
					<td style="text-align: right">
						<input id="tasto" style="cursor:not-allowed" type="submit" value="FILTRA" class="submitButton" disabled />
					</td>
				</tr>
			</table>
		</form>
	</div>
	<div id="overviewContainer">
		<h6>Overview </h6><p><span id="suggerimento">riduci finestra</span><img src="http://www.marcolanci.it/icequi/img/upArrow.png" alt="downArrow" id="overviewArrow" onclick="giraFrecciaOverview();" /></p>
		<hr />
		<div id="overviewPic">
			<img src="http://www.marcolanci.it/icequi/img/overview.png" alt="overviewPic" />
		</div>
	</div>
	<div id="resultsContainer">
		<table id="resultsTable">
			<tr>
				<th>Gusto</th>
				<th>Ricerche</th>
				<th>Percentuale</th>
			</tr>
			<tr>
				<td>Cioccolato</td>
				<td>173</td>
				<td>26,82</td>
			</tr>
			<tr>
				<td>Nocciola</td>
				<td>158</td>
				<td>24,5</td>
			</tr>
			<tr>
				<td>Fragola</td>
				<td>78</td>
				<td>12,09</td>
			</tr>
			<tr>
				<td>Pistacchio</td>
				<td>67</td>
				<td>10,39</td>
			</tr>
			<tr>
				<td>Pan di Stelle</td>
				<td>65</td>
				<td>10,08</td>
			</tr>
			<tr>
				<td>Panna</td>
				<td>54</td>
				<td>8,37</td>
			</tr>
			<tr>
				<td>Frutti di Bosco</td>
				<td>32</td>

<select id="dbProvinciaSelect">
	<option>Provincia</option>
	{% for provincia in provincie %}
	<option value="{{provincia.id}}">{{provincia.nomeProvincia}}</option>
	{% endfor %}
</select>
<script>
//tendina seleziona Provincia della pagina reports che influisce sulle Citt√†
$(document).ready(function(){
	$('#dbProvinciaSelect').on('change', function(){
		var id=$("option:selected", this).val();
		$.ajax({
			url: 'dashboardcityfilter/'+id
		})
		.done(function(data){
			$('#dbCitySection').html(data);
		})
	})
})
</script>
